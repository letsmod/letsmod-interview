{
  "compilerOptions": {
    "lib": ["es6", "es2016", "dom", "WebWorker"],
    "target": "es5",
    "outDir": "build",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },

  "include": ["src/**/*", "js/**/*", "node_modules/vite-plugin-pwa/client.d.ts"]
}